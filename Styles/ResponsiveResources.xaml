<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Responsive Breakpoints -->
    <x:Double x:Key="CompactBreakpoint">640</x:Double>
    <x:Double x:Key="MediumBreakpoint">1007</x:Double>
    <x:Double x:Key="LargeBreakpoint">1366</x:Double>
    
    <!-- Responsive Padding -->
    <Thickness x:Key="CompactPadding">16</Thickness>
    <Thickness x:Key="MediumPadding">24</Thickness>
    <Thickness x:Key="LargePadding">32</Thickness>
    
    <!-- Responsive Spacing -->
    <x:Double x:Key="CompactSpacing">12</x:Double>
    <x:Double x:Key="MediumSpacing">16</x:Double>
    <x:Double x:Key="LargeSpacing">24</x:Double>
    
    <!-- Responsive Grid Column Widths -->
    <x:Int32 x:Key="CompactColumns">1</x:Int32>
    <x:Int32 x:Key="MediumColumns">2</x:Int32>
    <x:Int32 x:Key="LargeColumns">3</x:Int32>
    
    <!-- Responsive Card Widths -->
    <x:Double x:Key="CompactCardMinWidth">280</x:Double>
    <x:Double x:Key="MediumCardMinWidth">320</x:Double>
    <x:Double x:Key="LargeCardMinWidth">360</x:Double>
    
    <!-- Responsive Font Sizes -->
    <x:Double x:Key="CompactTitleFontSize">24</x:Double>
    <x:Double x:Key="MediumTitleFontSize">28</x:Double>
    <x:Double x:Key="LargeTitleFontSize">32</x:Double>

</ResourceDictionary>
