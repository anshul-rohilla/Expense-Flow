<ContentDialog x:Class="Expense_Flow.Views.Dialogs.WhatsNewDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               Title="What's New"
               PrimaryButtonText="Got it!"
               Style="{StaticResource ModernContentDialogStyle}">
    <ScrollViewer MaxHeight="600"
            MaxWidth="500">
        <StackPanel Spacing="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Background="{StaticResource PrimaryGradientBrush}"
                        Width="64"
                        Height="64"
                        CornerRadius="16"
                        Margin="0,0,16,0">
                    <FontIcon Glyph="&#xE8C7;"
                            Foreground="White"
                            FontSize="32"/>
                </Border>
                <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Spacing="4">
                    <TextBlock Text="Expense Flow"
                            Style="{StaticResource CardTitleTextStyle}"/>
                    <TextBlock x:Name="VersionText"
                            Text="Version 1.0.0"
                            Style="{StaticResource CaptionTextBlockStyle}"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
            <TextBlock Text="Welcome to Expense Flow! Your modern expense tracking companion."
                    TextWrapping="Wrap"/>
            <TextBlock Text="Track expenses, manage projects, generate reports."
                    TextWrapping="Wrap"/>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>