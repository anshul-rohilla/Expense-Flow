<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="Expense_Flow.Views.Expenses.ExpenseDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid x:Name="RootGrid" Padding="32,24,32,32">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Padding" Value="16"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Padding" Value="24"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1007" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Padding" Value="32,24,32,32"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <ScrollViewer>
            <StackPanel Spacing="24">
                <!-- Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="&#xE72B;"
                            FontFamily="Segoe MDL2 Assets"
                            Style="{StaticResource IconButtonStyle}"
                            Click="BackButton_Click"
                            ToolTipService.ToolTip="Back"/>

                    <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Expense Details"
                                 Style="{StaticResource PageTitleTextStyle}"/>
                        <TextBlock x:Name="ExpenseNameText"
                                 Style="{StaticResource SubtitleTextBlockStyle}"
                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                        <Button Content="Edit"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="EditExpense_Click"/>
                        <Button Style="{StaticResource IconButtonStyle}"
                                Click="DeleteExpense_Click"
                                ToolTipService.ToolTip="Delete">
                            <FontIcon Glyph="&#xE74D;" Foreground="{StaticResource ErrorBrush}" />
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Amount Card -->
                <Border Background="{StaticResource PrimaryGradientBrush}"
                        Style="{StaticResource GradientCardStyle}"
                        Translation="0,0,32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Text="Total Amount"
                                     Foreground="White"
                                     Opacity="0.9"
                                     Style="{StaticResource StatLabelTextStyle}"/>
                            <TextBlock x:Name="AmountText"
                                     Foreground="White"
                                     FontSize="48"
                                     FontWeight="Bold"/>
                        </StackPanel>

                        <Border Grid.Column="1"
                                Background="#40FFFFFF"
                                CornerRadius="12"
                                Padding="12"
                                VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE8C7;"
                                    FontSize="32"
                                    Foreground="White"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Basic Information -->
                <Border Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                        Style="{StaticResource CardStyle}"
                        Translation="0,0,8">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Basic Information"
                                 Style="{StaticResource SectionTitleTextStyle}"/>

                        <Grid ColumnSpacing="24" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                <TextBlock Text="Expense Type"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="ExpenseTypeText"
                                         Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                                <TextBlock Text="Project"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="ProjectText"
                                         Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4">
                                <TextBlock Text="Payment Date"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="PaymentDateText"
                                         Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4">
                                <TextBlock Text="Created On"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="CreatedAtText"
                                         Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="4">
                                <TextBlock Text="Description"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="DescriptionText"
                                         TextWrapping="Wrap"
                                         Style="{StaticResource BodyTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Payment Details -->
                <Border Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                        Style="{StaticResource CardStyle}"
                        Translation="0,0,8">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Payment Details"
                                 Style="{StaticResource SectionTitleTextStyle}"/>

                        <Grid ColumnSpacing="24" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="Payment Amount"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="PaymentAmountText"
                                         Style="{StaticResource SubtitleTextBlockStyle}"
                                         Foreground="{StaticResource SuccessBrush}"
                                         FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="Payment Mode"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="PaymentModeText"
                                         Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Invoice Details -->
                <Border x:Name="InvoiceCard"
                        Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                        Style="{StaticResource CardStyle}"
                        Translation="0,0,8"
                        Visibility="Collapsed">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Invoice Details"
                                 Style="{StaticResource SectionTitleTextStyle}"/>

                        <Grid ColumnSpacing="24" RowSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
                                <TextBlock Text="Invoice Number"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="InvoiceNumberText"
                                         Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
                                <TextBlock Text="Invoice Date"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="InvoiceDateText"
                                         Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="0" Spacing="4"
                                      x:Name="BillingStartPanel"
                                      Visibility="Collapsed">
                                <TextBlock Text="Billing Start"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="BillingStartText"
                                         Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1" Grid.Column="1" Spacing="4"
                                      x:Name="BillingEndPanel"
                                      Visibility="Collapsed">
                                <TextBlock Text="Billing End"
                                         Style="{StaticResource CaptionTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                <TextBlock x:Name="BillingEndText"
                                         Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Subscription/Vendor -->
                <Border x:Name="SubscriptionCard"
                        Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                        Style="{StaticResource CardStyle}"
                        Translation="0,0,8"
                        Visibility="Collapsed">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Linked Subscription/Vendor"
                                 Style="{StaticResource SectionTitleTextStyle}"/>
                        <TextBlock x:Name="SubscriptionText"
                                 Style="{StaticResource SubtitleTextBlockStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Invoice File Viewer -->
                <Border x:Name="FileViewerCard"
                        Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                        Style="{StaticResource CardStyle}"
                        Translation="0,0,8"
                        Visibility="Collapsed">
                    <StackPanel Spacing="16">
                        <Grid>
                            <TextBlock Text="Invoice Attachment"
                                     Style="{StaticResource SectionTitleTextStyle}"/>
                            <Button HorizontalAlignment="Right"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Click="DownloadFile_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE896;" FontSize="16"/>
                                    <TextBlock Text="Download"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Image Viewer -->
                        <Image x:Name="InvoiceImage"
                               Stretch="Uniform"
                               MaxHeight="600"
                               Visibility="Collapsed"/>

                        <!-- PDF Viewer Placeholder -->
                        <Border x:Name="PdfPlaceholder"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                CornerRadius="8"
                                Padding="32"
                                MinHeight="400"
                                Visibility="Collapsed">
                            <StackPanel HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Spacing="16">
                                <FontIcon Glyph="&#xE8A5;"
                                        FontSize="64"
                                        Foreground="{StaticResource AccentBrush}"/>
                                <TextBlock Text="PDF Document"
                                         Style="{StaticResource SubtitleTextBlockStyle}"
                                         HorizontalAlignment="Center"/>
                                <TextBlock x:Name="PdfFileName"
                                         Style="{StaticResource BodyTextBlockStyle}"
                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                         HorizontalAlignment="Center"/>
                                <Button Content="Download to View"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="DownloadFile_Click"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
