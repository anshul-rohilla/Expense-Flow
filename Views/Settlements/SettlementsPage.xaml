<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Expense_Flow.Views.Settlements.SettlementsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Expense_Flow.Models"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Padding" Value="16"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="640" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Padding" Value="24"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1007" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="RootGrid.Padding" Value="32,24,32,32"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="8">
                <TextBlock Text="Settlements" 
                         Style="{StaticResource PageTitleTextStyle}"/>
                <TextBlock Text="Track reimbursements for personal expenses paid on behalf of the organization"
                         Style="{StaticResource BodyTextBlockStyle}"
                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                         TextWrapping="Wrap"/>
            </StackPanel>

            <Button Grid.Column="1"
                  Content="New Settlement" 
                  Style="{StaticResource PrimaryButtonStyle}"
                  VerticalAlignment="Center"
                  Click="NewSettlement_Click">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="N" Modifiers="Control"/>
                </Button.KeyboardAccelerators>
            </Button>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Style="{StaticResource StatCardStyle}"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    Margin="0,0,8,0"
                    Translation="0,0,8">
                <StackPanel Spacing="4" Padding="16">
                    <TextBlock Text="Pending Reimbursement" 
                             Style="{StaticResource CaptionTextBlockStyle}"
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{x:Bind ViewModel.TotalPendingAmount, Mode=OneWay}" 
                             FontSize="28" FontWeight="Bold"
                             Foreground="{StaticResource ErrorBrush}"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    Style="{StaticResource StatCardStyle}"
                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                    Margin="8,0,0,0"
                    Translation="0,0,8">
                <StackPanel Spacing="4" Padding="16">
                    <TextBlock Text="Unsettled Expenses" 
                             Style="{StaticResource CaptionTextBlockStyle}"
                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock Text="{x:Bind ViewModel.PendingExpenseCount, Mode=OneWay}" 
                             FontSize="28" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Tabs -->
        <Pivot Grid.Row="2"
               SelectedIndex="{x:Bind ViewModel.SelectedTabIndex, Mode=TwoWay}">
            
            <!-- Unsettled Expenses Tab -->
            <PivotItem Header="Pending Expenses">
                <Grid>
                    <!-- Loading -->
                    <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                                Width="50" Height="50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>

                    <!-- Empty State -->
                    <Border Style="{StaticResource StatCardStyle}"
                          Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                          Translation="0,0,16"
                          Visibility="{x:Bind ViewModel.UnsettledExpenses.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}">
                        <StackPanel Spacing="20" Padding="48">
                            <Border Background="{StaticResource SuccessGradientBrush}"
                                  Width="80" Height="80"
                                  CornerRadius="40"
                                  HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE73E;" FontSize="40" Foreground="White"/>
                            </Border>
                            <TextBlock Text="All caught up!"
                                     Style="{StaticResource SectionTitleTextStyle}"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="No personal expenses pending reimbursement"
                                     Style="{StaticResource BodyTextBlockStyle}"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Unsettled Expenses List -->
                    <ScrollViewer Margin="0,8,0,0"
                                Visibility="{x:Bind ViewModel.UnsettledExpenses.Count, Mode=OneWay, Converter={StaticResource InverseCountToVisibilityConverter}}">
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.UnsettledExpenses, Mode=OneWay}">
                            <ItemsRepeater.Layout>
                                <StackLayout Spacing="12"/>
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="models:Expense">
                                    <Border Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                                          Style="{StaticResource CardStyle}"
                                          Translation="0,0,8">
                                        <Grid ColumnSpacing="16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0"
                                                  Background="{StaticResource ErrorGradientBrush}"
                                                  Width="48" Height="48"
                                                  CornerRadius="12">
                                                <FontIcon Glyph="&#xE8C7;" Foreground="White" FontSize="22"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                                                <TextBlock Text="{x:Bind Name}" 
                                                         Style="{StaticResource CardTitleTextStyle}"/>
                                                <TextBlock Style="{StaticResource CaptionTextBlockStyle}"
                                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                    <Run Text="{x:Bind ReimbursementStatusDisplay}"/>
                                                    <Run Text=" Â· "/>
                                                    <Run Text="{x:Bind PaymentDate}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                                <TextBlock Text="{x:Bind PendingReimbursement}" 
                                                         FontWeight="Bold" FontSize="16"
                                                         Foreground="{StaticResource ErrorBrush}"
                                                         HorizontalAlignment="Right"/>
                                                <TextBlock Text="pending"
                                                         Style="{StaticResource CaptionTextBlockStyle}"
                                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                         HorizontalAlignment="Right"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Grid>
            </PivotItem>

            <!-- Settlement History Tab -->
            <PivotItem Header="Settlement History">
                <Grid>
                    <!-- Empty State -->
                    <Border Style="{StaticResource StatCardStyle}"
                          Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                          Translation="0,0,16"
                          Visibility="{x:Bind ViewModel.Settlements.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}">
                        <StackPanel Spacing="20" Padding="48">
                            <Border Background="{StaticResource PrimaryGradientBrush}"
                                  Width="80" Height="80"
                                  CornerRadius="40"
                                  HorizontalAlignment="Center">
                                <FontIcon Glyph="&#xE8B1;" FontSize="40" Foreground="White"/>
                            </Border>
                            <TextBlock Text="No settlements yet"
                                     Style="{StaticResource SectionTitleTextStyle}"
                                     HorizontalAlignment="Center"/>
                            <TextBlock Text="Create a settlement to batch reimbursements for personal expenses"
                                     Style="{StaticResource BodyTextBlockStyle}"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     HorizontalAlignment="Center"
                                     TextWrapping="Wrap"
                                     TextAlignment="Center"
                                     MaxWidth="400"/>
                        </StackPanel>
                    </Border>

                    <!-- Settlement List -->
                    <ScrollViewer Margin="0,8,0,0"
                                Visibility="{x:Bind ViewModel.Settlements.Count, Mode=OneWay, Converter={StaticResource InverseCountToVisibilityConverter}}">
                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.Settlements, Mode=OneWay}">
                            <ItemsRepeater.Layout>
                                <StackLayout Spacing="12"/>
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="models:Settlement">
                                    <Border Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                                          Style="{StaticResource CardStyle}"
                                          Translation="0,0,8">
                                        <Grid ColumnSpacing="16">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0"
                                                  Background="{StaticResource PrimaryGradientBrush}"
                                                  Width="48" Height="48"
                                                  CornerRadius="12">
                                                <FontIcon Glyph="&#xE8B1;" Foreground="White" FontSize="22"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                                                <TextBlock Text="{x:Bind Reference}" 
                                                         Style="{StaticResource CardTitleTextStyle}"/>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="{x:Bind StatusDisplay}"
                                                             Style="{StaticResource CaptionTextBlockStyle}"/>
                                                    <TextBlock Text="{x:Bind SettlementDate}"
                                                             Style="{StaticResource CaptionTextBlockStyle}"
                                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" 
                                                     Text="{x:Bind DisplayAmount}"
                                                     FontWeight="Bold" FontSize="16"
                                                     VerticalAlignment="Center"/>

                                            <Button Grid.Column="3"
                                                  Style="{StaticResource IconButtonStyle}"
                                                  Click="CancelSettlement_Click"
                                                  Tag="{x:Bind}"
                                                  ToolTipService.ToolTip="Cancel Settlement"
                                                  VerticalAlignment="Center">
                                                <FontIcon Glyph="&#xE711;" FontSize="16" Foreground="{StaticResource ErrorBrush}"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                    </ScrollViewer>
                </Grid>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
